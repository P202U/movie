{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./backend/dist",
    "rootDir": "./backend/src",
    "baseUrl": "./backend/src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@routes/*": ["routes/*"],
      "@middleware/*": ["middleware/*"],
      "@prismaClient": ["prismaClient.ts"]
    }
  },
  "include": [
    "backend/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
